{{>layout/header}}

<div class="layout-main">
    <form>
        <div class="form-group">
            <label for="title">제목</label>
            <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
        </div>
        <div class="form-group">
            <label for="content">내용</label>
            <textarea style="height: 300px; resize: none;" class="form-control" id="content" placeholder="내용을 입력하세요"></textarea>
        </div>
        <div class="form-group">
            <label for="author">작성자</label>
            <input type="text" class="form-control" id="author" value="{{userEmail}}" readonly>
        </div>
    </form>
    <div class="nav-right">
        <button class="btn btn-secondary" onclick="history.back()">취소</button>
        <button type="button" class="btn btn-primary" id="btn-save">등록</button>
    </div>
</div>

{{>layout/footer}}
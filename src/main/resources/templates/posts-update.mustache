{{>layout/header}}

    <div class="layout-main">
        <form>
            <div class="form-group">
                <label for="id">글 번호</label>
                <input type="text" class="form-control" id="id" value="{{posts.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{posts.title}}">
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-control" style="height: 300px; resize: none;" id="content">{{posts.content}}</textarea>
            </div>
        </form>
        <div class="nav-right">
            <button class="btn btn-secondary" onclick="history.back()">취소</button>
            <button type="button" class="btn btn-primary" id="btn-update">수정</button>
            <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
        </div>
    </div>

{{>layout/footer}}